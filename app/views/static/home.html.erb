<div class="text-center p-4">
  <h1 class="display-4 fw-bold text-primary mb-3">Private Events</h1>
  <p class="lead text-muted">Explore and join events created by the community!</p>
  <div class="btn-group my-4" role="group" aria-label="Main Navigation">
    <%= link_to "All Events", events_path, class: "btn btn-outline-danger btn-lg" %>
    <%= link_to "My Created Events", created_events_path, class: "btn btn-outline-success btn-lg" %>
    <%= link_to "My Attended Events", attended_events_path, class: "btn btn-outline-info btn-lg" %>
  </div>
  <h2 class="mt-5 mb-3 text-secondary">Filter Events by Category</h2>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="btn-group d-flex flex-wrap" role="group" aria-label="Category Filters">
        <%= link_to "Art Events", filtered_events_path('Art'), class: "btn btn-primary flex-fill mb-2" %>
        <%= link_to "Music Events", filtered_events_path('Music'), class: "btn btn-primary flex-fill mb-2" %>
        <%= link_to "Education Events", filtered_events_path('Education'), class: "btn btn-primary flex-fill mb-2" %>
        <%= link_to "Other Events", filtered_events_path('Other'), class: "btn btn-primary flex-fill mb-2" %>
      </div>
    </div>
  </div>
</div>